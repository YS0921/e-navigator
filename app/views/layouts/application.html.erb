<!DOCTYPE html>
<html>
  <head>
    <title>ENavigator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" data-method="get" href="/">e-Navigator</a>
        </li>

        <% if current_user %>
        <li class="nav-item">
          <a class="nav-link" data-method="get" href="/users/edit">プロフィール</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/interviews">自分の面接一覧</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-method="get" href="/letter_opener">メール</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" rel="nofollow" data-method="delete" href="/users/sign_out">ログアウト</a>
        </li>
        <% end %>

      </ul>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
